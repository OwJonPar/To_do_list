<p id="notice"><%= notice %></p>
<h1>To-Dos</h1>
<table class="table table-bordered table-striped" id="sortable">
  <thead>
    <tr>
      <th>Task</th>
      <th>Due Date</th>
      <th>Complete</th>

    </tr>
  </thead>
  <tbody>
    <% @to_dos.each do |t| %>
      <tr data-item-id=<%= "#{t.id}" %> class="item">
        <td><%= t.text %></td>
        <td><%= t.due_date %></td>
        <td><%= form_for t, :remote => true do |f| %>
          <%= f.check_box :complete, :class => 'complete-box' %>
          <% end %>
          </td>
        <td><%= link_to 'Edit', edit_to_do_path(t), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-success" data-toggle="modal" data-target="#new-modal">
  New To-Do
</button>

<%= render partial: 'new_to_do' %>
