<p id="notice"><%= notice %></p>
<h1>Listing To Do</h1>
<table class="table table-bordered table-striped" id="sortable">
  <thead>
    <tr>
      <th>Task</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @to_dos.each do |t| %>
      <tr data-item-id=<%= "#{t.id}" %> class="item">
        <td><%= t.text %></td>
        <td><%= t.due_date %></td>
        <td><%= link_to 'Edit', edit_to_do_path(t), :class => 'btn btn-default pull-right' %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default pull-right' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'New To Do', new_to_do_path, :method => "get", id: "go-to-new" %>
